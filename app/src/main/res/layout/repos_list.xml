<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FlexSass AdvanceCss"
                android:textColor="@color/purple_light"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_marginEnd="3dp"
                android:text="Size:" />

            <TextView
                android:id="@+id/textView_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_marginEnd="15dp"
                android:layout_toRightOf="@id/textView_size"
                android:text="55913" />


            <TextView
                android:id="@+id/textView_watchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_marginEnd="3dp"
                android:layout_toRightOf="@id/textView_name_value"
                android:text="Watchers:" />

            <TextView
                android:id="@+id/textView_watchers_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_marginEnd="15dp"
                android:layout_toRightOf="@id/textView_watchers"
                android:text="55913" />

            <TextView
                android:id="@+id/textView_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_marginEnd="3dp"
                android:layout_toRightOf="@id/textView_watchers_value"
                android:text="Forks:" />

            <TextView
                android:id="@+id/textView_forks_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name"
                android:layout_marginEnd="15dp"
                android:layout_toRightOf="@id/textView_forks"
                android:text="559" />

            <TextView
                android:id="@+id/textView_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_size"
                android:layout_marginEnd="3dp"
                android:text="created_at:" />

            <TextView
                android:id="@+id/textView_created_at_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_size"
                android:layout_marginEnd="15dp"
                android:layout_toRightOf="@id/textView_created_at"
                android:text="2018-04-18" />

            <TextView
                android:id="@+id/textView_updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_size"
                android:layout_marginEnd="3dp"
                android:layout_toRightOf="@id/textView_created_at_value"
                android:text="updated_at:" />

            <TextView
                android:id="@+id/textView_updated_at_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_size"
                android:layout_marginEnd="15dp"
                android:layout_toRightOf="@id/textView_updated_at"
                android:text="2018-04-18" />

            <Button
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:id="@+id/btn_view_repo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@id/textView_created_at"
                android:layout_alignRight="@id/textView_updated_at_value"
                android:background="@drawable/btn_gradient"
                android:text="View Repo" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
